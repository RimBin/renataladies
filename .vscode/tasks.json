{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Next.js: Dev (web/)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": { "cwd": "${workspaceFolder}/web" },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "nextjs",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting...",
            "endsPattern": "Ready in"
          }
        }
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Next.js: Dev (New Window)",
      "type": "shell",
      "command": "Start-Process",
      "args": [
        "powershell",
        "-NoExit",
        "-Command",
        "& { Set-Location '${workspaceFolder}/web'; npm run dev }"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Next.js: Build (web/)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": { "cwd": "${workspaceFolder}/web" },
      "problemMatcher": ["$tsc"],
      "group": "build"
    }
  ]
}
